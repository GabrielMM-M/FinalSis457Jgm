@model WebJgmNetCore.Models.Serie

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">

<h1>Eliminar Serie</h1>

<h3>¿Esta seguro que desea eliminar este elemento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Título</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt class = "col-sm-2">Sinopsis</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopsis)
        </dd>

        <dt class = "col-sm-2">Director</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>

        <dt class = "col-sm-2">Duración</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>

        <dt class = "col-sm-2">Fecha de Estreno</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEstreno)
        </dd>

        <dt class = "col-sm-2">Usuario Registro</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioRegistro)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index"><i class="fa-solid fa-arrow-left-long"></i>Volver a la lista</a>
    </form>
</div>
</div>
</div>